#!/opt/homebrew/opt/ruby/bin/ruby --disable-gems

ITALIC = 3
RED = 31
YELLOW = 33
CYAN = 36
GREY = 90
BOLD_GREEN = 92
BOLD_MAGENTA = 95
ORANGE = '38;5;208'

def theme
  @theme ||= begin
    if Time.now.strftime("%m").to_i == 12
      { machine: BOLD_GREEN, path: RED, branch: BOLD_GREEN, prefix: RED, success_emoji: ['🎄', '🎅', '🎁', '🤶', '⛄'][ARGV[1].to_i % 5], failure_emoji: '🪨' }
    elsif Time.now.strftime("%m").to_i == 10 && Time.now.strftime("%d").to_i >= 25
      { machine: ORANGE, path: YELLOW, branch: ORANGE, prefix: ORANGE, success_emoji: '🎃', failure_emoji: '👻' }
    else
      { machine: GREY, path: CYAN, branch: BOLD_MAGENTA, prefix: nil, success_emoji: '🐙', failure_emoji: '🤬' }
    end
  end
end

def format(code, text)
  return text unless code
  "%{\x1b[#{code}m%}#{text}%{\x1b[0m%}"
end

def part(data, symbol, color = nil)
  return '' if data == 0
  format(color, "#{symbol}#{data}")
end

def machine
  require 'socket'
  name = Socket.gethostname
  name = '%2{🌱%} Fullscript' if name == 'CA-GYQQJMHGPK'
  format(theme[:machine], format(ITALIC, name))
end

def path
  pwd = Dir.pwd
  home = ENV['HOME']
  prefix_replace = {
    "#{home}/src/git.fullscript.io" => ' ',
    "#{home}/src/github.com" => ' ',
    home => '~',
  }
  prefix_replace.each do |prefix, replacement|
    pwd = pwd.sub(prefix, replacement) if pwd.start_with?(prefix)
  end
  format(theme[:path], pwd)
end

def format_prefix(prefix)
  format(theme[:prefix], prefix)
end

def print_prompt(suffix = "", final: false)
  print "#{format_prefix('╭─')}#{machine} #{path}#{suffix}\n" \
    "#{format_prefix('╰─')}%(?.%2{#{theme[:success_emoji]}%}.#{format(RED, '[%?]')} %2{#{theme[:failure_emoji]}%}) "
  exit 0 if final

  print "\0"
  $stdout.flush
end

print_prompt

require 'open3'

porcelain, _err, stat = Open3.capture3('git', 'status', '--porcelain=v2', '--show-stash', '--branch')
unless stat.success?
  print_prompt("", final: true)
end

info = porcelain.each_line.each_with_object(Hash.new(0)) do |line, h|
  case line
  when /^# branch\.oid (.*)/
    h[:oid] = $1
  when /^# branch\.head (.*)/
    h[:branch] = $1
  when /^# branch\.ab \+(\d+) -(\d+)/
    h[:ahead] = $1.to_i
    h[:behind] = $2.to_i
  when /^# stash (\d+)/
    h[:stashed] = $1.to_i
  when /^[12] (.)(.)/
    h[:staged] += 1 if $1 != '.'
    h[:changed] += 1 if $2 != '.'
  when /^u/
    h[:conflicts] += 1
  when /^\?/
    h[:untracked] += 1
  end
end

info[:branch] = ":#{info[:oid][0..6]}" if info[:branch] == '(detached)' || info[:branch] == 0
info[:clean] = '' if info[:staged] + info[:conflicts] + info[:changed] + info[:untracked] == 0

status = [
  ' [',
  part(info[:branch],    '',        theme[:branch]),
  '|',
  part(info[:behind],    '↓'),
  part(info[:ahead],     '↑'),
  part(info[:staged],    '%2{🎭%}', RED),
  part(info[:conflicts], '%2{💥%}', RED),
  part(info[:changed],   '%2{🚧%}', YELLOW),
  part(info[:untracked], '%2{🆕%}', CYAN),
  part(info[:stashed],   '%2{📦%}', YELLOW),
  part(info[:clean],     '',       BOLD_GREEN),
  ']',
].join('')

print_prompt(status, final: true)
