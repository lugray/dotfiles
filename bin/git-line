#!/usr/bin/env ruby --disable-gems

require 'open3'

RED = 31
YELLOW = 33
CYAN = 36
BOLD_GREEN = 92
BOLD_MAGENTA = 95

def format(code, text)
  return text unless code
  "\x1b[#{code}m#{text}\x1b[0m"
end

def part(info, key, symbol, color = nil)
  return '' if info[key] == 0
  format(color, "#{symbol}#{info[key]}")
end

dir = ARGV.first || Dir.pwd
porcelain, _err, stat = Open3.capture3('git', '-C', dir, 'status', '--porcelain=v2', '--show-stash', '--branch')
unless stat.success?
  puts ""
  return
end

info = porcelain.each_line.each_with_object(Hash.new(0)) do |line, h|
  case line
  when /^# branch\.oid (.*)/
    h[:oid] = $1
  when /^# branch\.head (.*)/
    h[:branch] = $1
  when /^# branch\.ab \+(\d+) -(\d+)/
    h[:ahead] = $1.to_i
    h[:behind] = $2.to_i
  when /^# stash (\d+)/
    h[:stashed] = $1.to_i
  when /^[12] (.)(.)/
    h[:staged] += 1 if $1 != '.'
    h[:changed] += 1 if $2 != '.'
  when /^u/
    h[:conflicts] += 1
  when /^\?/
    h[:untracked] += 1
  end
end

info[:branch] = ":#{info[:oid][0..6]}" if info[:branch] == '(detached)' || info[:branch] == 0
info[:clean] = '' if info[:staged] + info[:conflicts] + info[:changed] + info[:untracked] == 0

status = [
  '[',
  part(info, :branch, '', BOLD_MAGENTA),
  '|',
  part(info, :behind, 'â†“'),
  part(info, :ahead, 'â†‘'),
  part(info, :staged, 'ðŸŽ­', RED),
  part(info, :conflicts, 'ðŸ’¥', RED),
  part(info, :changed, 'ðŸš§', YELLOW),
  part(info, :untracked, 'ðŸ†•', CYAN),
  part(info, :stashed, 'ðŸ“¦', YELLOW),
  part(info, :clean, 'îœ¦', BOLD_GREEN),
  ']',
].join('')

puts status
